<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_background_title"
        android:textColor="@color/auth_background_title_text_color"
        android:textSize="@dimen/auth_logo_title_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/vkLogoImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/vkLogoImageView"
        android:layout_width="@dimen/auth_background_logo_size"
        android:layout_height="@dimen/auth_background_logo_size"
        android:src="@drawable/login_logo_background"
        app:layout_constraintBottom_toBottomOf="@id/loginButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/login_button_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/login_button_margin_bottom"
        android:background="@drawable/login_button_background"
        android:text="@string/login_button_text"
        android:textColor="@color/auth_login_button_text_color"
        android:textSize="@dimen/login_button_text_size"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
